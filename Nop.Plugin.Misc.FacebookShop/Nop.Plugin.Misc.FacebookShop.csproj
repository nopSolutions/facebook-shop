  <ItemGroup>
    <Content Include="Content\images\logo.gif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Content\images\top-menu-background.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
