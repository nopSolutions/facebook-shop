  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..\..\Presentation\Nop.Web\Plugins\Misc.FacebookShop</OutputPath>
    <OutDir>$(OutputPath)</OutDir>
